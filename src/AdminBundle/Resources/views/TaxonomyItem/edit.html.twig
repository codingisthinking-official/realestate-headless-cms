{% extends 'AdminBundle::layout.html.twig' %}

{% block currentItem %}taxonomy.{{ taxonomy.slug }}{% endblock %}
{% block content %}
    <div class="content--container">
        <div class="container--white">
            <div class="action-list">
                <a style="margin-right: 10px;" class="btn btn-default" href="{{ url('admin.taxonomy', {'id': taxonomy.id}) }}"><i class="fa fa-chevron-left"></i> Back</a>
                <a style="margin-right: 10px;" class="btn btn-danger" href="{{ url('admin.delete_taxonomy_item', {'taxonomy': taxonomy.id, 'id': taxonomyItem.id}) }}"><i class="fa fa-minus"></i> Remove</a>
            </div>
            <br/>
            {% include 'AdminBundle:TaxonomyItem:_form.html.twig' with {'isNew': false, 'taxonomy': taxonomy, 'taxonomyItem': taxonomyItem} %}
        </div>
    </div>
{% endblock %}

